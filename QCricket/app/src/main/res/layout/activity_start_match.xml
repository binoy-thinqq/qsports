<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/score_card_bg"
    tools:context="qsports.thinqq.com.qcricket.StartMatchActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1">

        <AutoCompleteTextView
            android:id="@+id/autoCmpMatchName"
            android:layout_width="320dp"
            android:layout_height="65dp"
            android:layout_alignParentTop="true"
            android:hint="Match Name"
            android:layout_marginTop="100dp"
            android:textIsSelectable="false"
            android:textStyle="bold"
            android:clickable="true"
            android:background="#ffffff"
            android:layout_gravity="center_horizontal" />

        <AutoCompleteTextView
            android:id="@+id/autoCmpTFirstTeam"
            android:layout_width="320dp"
            android:layout_height="65dp"
            android:layout_alignParentTop="true"
            android:hint="Team Name"
            android:layout_marginTop="10dp"
            android:textIsSelectable="false"
            android:textStyle="bold"
            android:clickable="true"
            android:background="#ffffff"
            android:layout_gravity="center_horizontal" />

        <AutoCompleteTextView
            android:id="@+id/autoCmpTSecondTeam"
            android:layout_width="320dp"
            android:layout_height="65dp"
            android:layout_alignParentTop="true"
            android:hint="Opponent Team Name"
            android:layout_marginTop="10dp"
            android:textIsSelectable="false"
            android:clickable="true"
            android:background="#ffffff"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold" />

        <TableRow
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_weight="0.06"
            android:layout_marginTop="10dp">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="Start First Innings"
                android:id="@+id/button"
                android:textColor="#ffffff"
                android:background="#61181c"
                android:textStyle="bold" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="Start Second Innings"
                android:id="@+id/button2"
                android:textColor="#ffffff"
                android:background="#61181c"
                android:layout_marginLeft="5dp"
                android:layout_gravity="left"
                android:textStyle="bold" />
        </TableRow>


    </LinearLayout>

</RelativeLayout>
