<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p1="urn:import:com.google.gwt.user.cellview.client">
	<ui:style>
		.important {
			font-weight: bold;
		}
		
		.marginright {
			margin: 0px 10px 0px 0px
		}
	</ui:style>
	<g:VerticalPanel width="100%" stylePrimaryName="panel"	ui:field="playerSelectPanel">
		<g:Cell width="100%" horizontalAlignment="ALIGN_CENTER">
		<g:HTMLPanel width="100%">
			<g:Label ui:field="heading" styleName="title panelTitle" />
			<g:Image ui:field="loadingPlayers" visible="true"></g:Image>
		</g:HTMLPanel>
		</g:Cell>
		<g:Cell width="100%" horizontalAlignment="ALIGN_CENTER">
			<g:HTMLPanel width="100%">
				<g:FocusPanel ui:field="focusSuggestPlayerPanel">
					<g:TextBox ui:field="suggestPlayer" width="250px" />
				</g:FocusPanel>
			</g:HTMLPanel>
		</g:Cell>
		<g:Cell width="100%" horizontalAlignment="ALIGN_CENTER">
			<g:HorizontalPanel>
				<g:Cell width="85%" horizontalAlignment="ALIGN_RIGHT">
					<g:Button text="Done" ui:field="btnSaveMatch"
						styleName="actionButton {style.marginright}" />
				</g:Cell>
				<g:Cell horizontalAlignment="ALIGN_RIGHT">
					<g:Button text="Cancel" ui:field="btnCancel" styleName="linkButton" />
				</g:Cell>
			</g:HorizontalPanel>
		</g:Cell>
	</g:VerticalPanel>
</ui:UiBinder> 