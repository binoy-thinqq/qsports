<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p1="urn:import:com.google.gwt.user.cellview.client" xmlns:p2="urn:import:com.google.gwt.user.datepicker.client">
	<ui:style>
		.important {
			font-weight: bold;
		}
		
		.heading {
			font-weight: bold;
			padding-bottom: 10%;
		}
		
		.signin {
			
		}
	</ui:style>

	<g:HorizontalPanel width="100%">
		<g:Cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_TOP"
			width="50%">
			<g:VerticalPanel horizontalAlignment="ALIGN_CENTER" width="70%" styleName="form_panel">
				<g:SimplePanel styleName="heading_panel" width="100%">
					<g:Label text="New User - Registration" styleName="heading_label"
						width="100%" height="30px" horizontalAlignment="ALIGN_LEFT" />
				</g:SimplePanel>
				<g:Cell height="25px" verticalAlignment="ALIGN_MIDDLE" horizontalAlignment="ALIGN_LEFT">
					<g:Hyperlink text="Already Registered ? Click here to Sign in" targetHistoryToken="newHistoryToken" />
				</g:Cell>
				<g:Cell verticalAlignment="ALIGN_MIDDLE" height="25px" horizontalAlignment="ALIGN_LEFT">
					<g:Hyperlink text="Forgot your password ? Click here"
						targetHistoryToken="newHistoryToken" />
				</g:Cell>
				<g:SimplePanel width="100%" styleName="errorpanel">
					<p1:CellList width="100%" ui:field="errorList" />
				</g:SimplePanel>
				<g:HorizontalPanel>
					<g:Cell width="150px" verticalAlignment="ALIGN_MIDDLE">
						<g:Label text="Name" width="" styleName="input_label" />
					</g:Cell>
					<g:Cell horizontalAlignment="ALIGN_RIGHT">
						<g:TextBox styleName="input_textbox" height="25px"
							width="300px" ui:field="txtName" />
					</g:Cell>
					<g:Cell verticalAlignment="ALIGN_MIDDLE" horizontalAlignment="ALIGN_CENTER" width="30px" height="30px">
						<g:Image url="images/error-icon.png" ui:field="nameErrorMarker" visible="false"/>
					</g:Cell>
				</g:HorizontalPanel>
				<g:HorizontalPanel>
					<g:Cell width="150px" verticalAlignment="ALIGN_MIDDLE">
						<g:Label text="Email" width="" styleName="input_label" />
					</g:Cell>
					<g:Cell horizontalAlignment="ALIGN_RIGHT">
						<g:TextBox styleName="input_textbox" height="25px"
							width="300px" ui:field="txtEmail" />
					</g:Cell>
					<g:Cell verticalAlignment="ALIGN_MIDDLE" horizontalAlignment="ALIGN_CENTER" width="30px" height="30px">
						<g:Image url="images/error-icon.png" ui:field="txtEmailErrorMarker" visible="false"/>
					</g:Cell>
				</g:HorizontalPanel>
				<g:HorizontalPanel>
					<g:Cell width="150px" verticalAlignment="ALIGN_MIDDLE">
						<g:Label text="Password" styleName="input_label" />
					</g:Cell>
					<g:Cell horizontalAlignment="ALIGN_RIGHT">
						<g:PasswordTextBox styleName="input_textbox"
							height="25px" width="300px" ui:field="txtPassword" />
					</g:Cell>
					<g:Cell verticalAlignment="ALIGN_MIDDLE" horizontalAlignment="ALIGN_CENTER" width="30px" height="30px">
						<g:Image url="images/error-icon.png" ui:field="txtPasswordErrorMarker" visible="false"/>
					</g:Cell>
				</g:HorizontalPanel>
				<g:HorizontalPanel>
					<g:Cell width="150px" verticalAlignment="ALIGN_MIDDLE">
						<g:Label text="Confirm Password" styleName="input_label" />
					</g:Cell>
					<g:Cell horizontalAlignment="ALIGN_RIGHT">
						<g:PasswordTextBox styleName="input_textbox"
							height="25px" width="300px" ui:field="txtConfirmPassword" />
					</g:Cell>
					<g:Cell verticalAlignment="ALIGN_MIDDLE" horizontalAlignment="ALIGN_CENTER" width="30px" height="30px">
						<g:Image url="images/error-icon.png" ui:field="txtConfirmPasswordErrorMarker" visible="false"/>
					</g:Cell>
				</g:HorizontalPanel>
				<g:HorizontalPanel>
					<g:Cell width="150px" verticalAlignment="ALIGN_MIDDLE">
						<g:Label text="Sex" styleName="input_label" />
					</g:Cell>
					<g:Cell horizontalAlignment="ALIGN_RIGHT">
						<g:ListBox height="30px" styleName="input_textbox" width="308px" ui:field="listSex"/>
					</g:Cell>
					<g:Cell verticalAlignment="ALIGN_MIDDLE" horizontalAlignment="ALIGN_CENTER" width="30px" height="30px">
						<g:Image url="images/error-icon.png" ui:field="listSexErrorMarker" visible="false"/>
					</g:Cell>
				</g:HorizontalPanel>
				<g:HorizontalPanel>
					<g:Cell width="150px" verticalAlignment="ALIGN_MIDDLE">
						<g:Label text="Date of Birth" styleName="input_label" />
					</g:Cell>
					<g:Cell horizontalAlignment="ALIGN_RIGHT">
						<p2:DateBox styleName="input_textbox" width="300px" ui:field="dob"/>
					</g:Cell>
					<g:Cell verticalAlignment="ALIGN_MIDDLE" horizontalAlignment="ALIGN_CENTER" width="30px" height="30px">
						<g:Image url="images/error-icon.png" ui:field="dobErrorMarker" visible="false"/>
					</g:Cell>
				</g:HorizontalPanel>
				<g:HorizontalPanel>
					<g:Cell width="150px" verticalAlignment="ALIGN_MIDDLE">
						<g:Label text="City" styleName="input_label" />
					</g:Cell>
					<g:Cell horizontalAlignment="ALIGN_RIGHT">
						<g:TextBox styleName="input_textbox" height="25px"
							width="300px" ui:field="txtCity" />
					</g:Cell>
					<g:Cell verticalAlignment="ALIGN_MIDDLE" horizontalAlignment="ALIGN_CENTER" width="30px" height="30px">
						<g:Image url="images/error-icon.png" ui:field="txtCityErrorMarker" visible="false"/>
					</g:Cell>
				</g:HorizontalPanel>

				<g:HorizontalPanel>
					<g:Cell width="150px" verticalAlignment="ALIGN_MIDDLE">
						<g:Label text="State/Provice" styleName="input_label" />
					</g:Cell>
					<g:Cell horizontalAlignment="ALIGN_RIGHT">
						<g:TextBox styleName="input_textbox" height="25px"
							width="300px" ui:field="txtState" />
					</g:Cell>
					<g:Cell verticalAlignment="ALIGN_MIDDLE" horizontalAlignment="ALIGN_CENTER" width="30px" height="30px">
						<g:Image url="images/error-icon.png" ui:field="txtStateErrorMarker" visible="false"/>
					</g:Cell>
				</g:HorizontalPanel>
				<g:HorizontalPanel>
					<g:Cell width="150px" verticalAlignment="ALIGN_MIDDLE">
						<g:Label text="Country" styleName="input_label" />
					</g:Cell>
					<g:Cell horizontalAlignment="ALIGN_RIGHT">
						<g:ListBox styleName="input_textbox" height="30px"
							width="308px" ui:field="listCountry" />
					</g:Cell>
					<g:Cell verticalAlignment="ALIGN_MIDDLE" horizontalAlignment="ALIGN_CENTER" width="30px" height="30px">
						<g:Image url="images/error-icon.png" ui:field="listCountryErrorMarker" visible="false"/>
					</g:Cell>
				</g:HorizontalPanel>
				<g:Cell horizontalAlignment="ALIGN_RIGHT">
					<g:Button text="Register" ui:field="btnRegister" height="30px"
						styleName="button" />
				</g:Cell>
			</g:VerticalPanel>
		</g:Cell>
	</g:HorizontalPanel>
</ui:UiBinder> 