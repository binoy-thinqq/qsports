			</g:Cell>
		</g:HorizontalPanel>
		<g:HorizontalPanel height="100px">
			<g:Cell verticalAlignment="ALIGN_MIDDLE">
				<g:Image url="images/search_user.png"/>
			</g:Cell>
			<g:Cell verticalAlignment="ALIGN_MIDDLE">
				<g:InlineLabel text="Find other players and teams" styleName="simple_heading_label" width="100%" height="30px" horizontalAlignment="ALIGN_LEFT"/>
			</g:Cell>
		</g:HorizontalPanel>
		</g:VerticalPanel>													
		</g:Cell>
		<g:Cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
			<g:VerticalPanel width="60%" styleName="form_panel">
				<g:SimplePanel styleName="heading_panel" width="80%">
				<g:InlineLabel text="Enter Confirmation Code" styleName="heading_label" width="100%" height="30px"/>
				</g:SimplePanel>
				<g:InlineLabel styleName="input_label"/>
				<g:InlineLabel ui:field="emailLabel" styleName="input_label" text="Email : Undisclosed Email"/>
				<g:InlineLabel styleName="input_label"/>
