		<g:HorizontalPanel height="100px">
			<g:Cell verticalAlignment="ALIGN_MIDDLE">
				<g:Image url="images/male_profile.png"/>
			</g:Cell>
			<g:Cell verticalAlignment="ALIGN_MIDDLE">
				<g:InlineLabel text="Create cricket profile and track your game statistics" styleName="simple_heading_label" width="100%" height="30px" horizontalAlignment="ALIGN_LEFT"/>
			</g:Cell>
		</g:HorizontalPanel>
		<g:HorizontalPanel height="100px">
			<g:Cell verticalAlignment="ALIGN_MIDDLE">
				<g:Image url="images/ream.png"/>
			</g:Cell>
			<g:Cell verticalAlignment="ALIGN_MIDDLE">
				<g:InlineLabel text="Create your team and maintain team statistics" styleName="simple_heading_label" width="100%" height="30px" horizontalAlignment="ALIGN_LEFT"/>
			</g:Cell>
		</g:HorizontalPanel>
		<g:HorizontalPanel height="100px">
			<g:Cell verticalAlignment="ALIGN_MIDDLE">
				<g:Image url="images/plan_and_schedule.png"/>
