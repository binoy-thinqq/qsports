<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p1="urn:import:com.google.gwt.user.cellview.client">
	<ui:style>
		
	</ui:style>
	<g:VerticalPanel width="85%" height="">
		<g:SimplePanel width="100%" styleName="messagePanel">
			<p1:CellList width="100%" ui:field="messageList" />
		</g:SimplePanel>
		<g:Cell width="100%">
			<g:HorizontalPanel width="100%" height="">
				<g:Cell width="70%">
					<g:VerticalPanel width="100%" height="500px">
							<g:Cell horizontalAlignment="ALIGN_CENTER" height="125px">
								<g:VerticalPanel height="80px" width="90%" horizontalAlignment="ALIGN_LEFT">
								<g:HorizontalPanel width="100%">
									<g:Cell width="64px" verticalAlignment="ALIGN_MIDDLE">
										<g:Image url="images/profile_64.png" />
									</g:Cell>
									<g:Cell verticalAlignment="ALIGN_MIDDLE">
										<g:Label text="Player Profile" styleName="contentheading" width="200px" />
									</g:Cell>
								</g:HorizontalPanel>
									<g:InlineLabel
										text="Cricket Q gives a perfect place to maintain your individual statistics. See consolidated statistics of all games you play."
										styleName="simple_heading_label" width="100%" height="30px"
										horizontalAlignment="ALIGN_LEFT" />
							</g:VerticalPanel>
							</g:Cell>
							<g:Cell horizontalAlignment="ALIGN_CENTER" height="125px">
								<g:VerticalPanel height="80px" width="90%" >
								<g:HorizontalPanel width="100%">
									<g:Cell width="64px" verticalAlignment="ALIGN_MIDDLE">
										<g:Image url="images/team_64.png" />
									</g:Cell>
									<g:Cell verticalAlignment="ALIGN_MIDDLE">
										<g:Label text="Team Profile" styleName="contentheading" width="200px" />
									</g:Cell>
								</g:HorizontalPanel>
									<g:InlineLabel
										text="Team statistics - the toughest thing to maintain and access ! is made trivial here. More team options to come in after Beta. "
										styleName="simple_heading_label" width="100%" height="30px"
										horizontalAlignment="ALIGN_LEFT" />
							</g:VerticalPanel>
							</g:Cell>
							<g:Cell horizontalAlignment="ALIGN_CENTER" height="125px">
								<g:VerticalPanel height="80px" width="90%">
								<g:HorizontalPanel width="100%">
									<g:Cell width="64px" verticalAlignment="ALIGN_MIDDLE">
										<g:Image url="images/scorecard_64.png" />
									</g:Cell>
									<g:Cell verticalAlignment="ALIGN_MIDDLE">
										<g:Label text="Store Scorecard" styleName="contentheading" width="200px" />
									</g:Cell>
								</g:HorizontalPanel>
									<g:InlineLabel
										text="Store scorecard of all matches you play. All scores add to your individual and team statistics automatically"
										styleName="simple_heading_label" width="100%" height="30px"
										horizontalAlignment="ALIGN_LEFT" />
							</g:VerticalPanel>
							</g:Cell>
							<g:Cell horizontalAlignment="ALIGN_CENTER" height="125px">
								<g:VerticalPanel height="80px" width="90%">
								<g:HorizontalPanel width="100%">
									<g:Cell width="64px" verticalAlignment="ALIGN_MIDDLE">
										<g:Image url="images/search_64.png" />
									</g:Cell>
									<g:Cell verticalAlignment="ALIGN_MIDDLE">
										<g:Label text="Search Profiles" styleName="contentheading" width="200px" />
									</g:Cell>
								</g:HorizontalPanel>
									<g:InlineLabel
										text="Search teams and players. Helps you reach teams in your location and plan the next season against them ! Have fun !"
										styleName="simple_heading_label" width="100%" height="30px"
										horizontalAlignment="ALIGN_LEFT" />
							</g:VerticalPanel>
							</g:Cell>
					</g:VerticalPanel>
				</g:Cell>

				<g:Cell width="30%" horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
				<g:VerticalPanel width="100%" height="400px">
					<g:Cell horizontalAlignment="ALIGN_CENTER" width="100%">
					<g:VerticalPanel height="250px" horizontalAlignment="ALIGN_LEFT"
						width="100%" styleName="form_panel">
						<g:SimplePanel styleName="heading_panel" width="60%">
							<g:InlineLabel text="Sign In" styleName="heading_label"
								width="100%" height="30px" horizontalAlignment="ALIGN_LEFT" />
						</g:SimplePanel>
						<g:SimplePanel width="100%" styleName="errorpanel">
							<p1:CellList width="100%" ui:field="errorList" />
						</g:SimplePanel>
						<g:Label text="Email" width="" styleName="input_label" />
						<g:HorizontalPanel>
							<g:Cell horizontalAlignment="ALIGN_RIGHT">
								<g:TextBox styleName="input_textbox" height="25px"
									width="300px" ui:field="txtEmail" />
							</g:Cell>
							<g:Cell verticalAlignment="ALIGN_MIDDLE"
								horizontalAlignment="ALIGN_CENTER" width="30px" height="30px">
								<g:Image url="images/error-icon.png" ui:field="txtEmailErrorMarker"
									visible="false" />
							</g:Cell>
						</g:HorizontalPanel>
						<g:Label text="Password" styleName="input_label" />
						<g:HorizontalPanel>

							<g:Cell horizontalAlignment="ALIGN_RIGHT">
								<g:PasswordTextBox styleName="input_textbox"
									height="25px" width="300px" ui:field="txtPassword" />
							</g:Cell>
							<g:Cell verticalAlignment="ALIGN_MIDDLE"
								horizontalAlignment="ALIGN_CENTER" width="30px" height="30px">
								<g:Image url="images/error-icon.png" ui:field="txtPasswordErrorMarker"
									visible="false" />
							</g:Cell>
						</g:HorizontalPanel>
						<g:Cell horizontalAlignment="ALIGN_RIGHT">
							<g:Button text="Sign In" ui:field="btnSubmit" height="30px"
								styleName="button" />
						</g:Cell>
						<g:Cell height="25px" verticalAlignment="ALIGN_MIDDLE">
							<g:Hyperlink text="New User" targetHistoryToken="newHistoryToken" />
						</g:Cell>
						<g:Cell verticalAlignment="ALIGN_MIDDLE" height="25px">
							<g:Hyperlink text="Forgot my password"
								targetHistoryToken="newHistoryToken" />
						</g:Cell>
					</g:VerticalPanel>
					</g:Cell>
												<g:Cell horizontalAlignment="ALIGN_CENTER" width="125px">
					<g:VerticalPanel height="150px" width="100%">
						<g:Cell verticalAlignment="ALIGN_MIDDLE">
							<g:HorizontalPanel width="100%">
									<g:Cell width="64px" verticalAlignment="ALIGN_MIDDLE">
										<g:Image url="images/search_64.png" />
									</g:Cell>
									<g:Cell verticalAlignment="ALIGN_MIDDLE">
										<g:Label text="Advertise" styleName="contentheading" width="200px" />
									</g:Cell>
								</g:HorizontalPanel>
						</g:Cell>
									<g:InlineLabel
										text="Advertise here"
										styleName="simple_heading_label" width="100%" height="30px"
										horizontalAlignment="ALIGN_LEFT" />
							</g:VerticalPanel>
					</g:Cell>
					</g:VerticalPanel>
				</g:Cell>
			</g:HorizontalPanel>
		</g:Cell>
	</g:VerticalPanel>
</ui:UiBinder>